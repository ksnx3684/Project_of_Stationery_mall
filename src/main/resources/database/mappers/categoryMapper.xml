<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.stationery.project.category.CategoryDAO">

	<select id="catelist" resultType="CategoryDTO">
		select * from product_category where parentid is null order by categorynum asc
	</select>
	
	<insert id="add" parameterType="CategoryDTO">
insert into PRODUCT_CATEGORY(categorynum,categoryname,parentid)
values(#{categoryNum},#{categoryName},#{parentId})
	</insert>
</mapper>